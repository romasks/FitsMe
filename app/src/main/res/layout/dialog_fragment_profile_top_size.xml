<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="ru.fitsme.android.presentation.fragments.profile.viewmodel.SizeProfileViewModel" />

        <variable
            name="bindingEvents"
            type="ru.fitsme.android.presentation.fragments.profile.events.SizeDialogFragmentEvents" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="22dp"
        >

        <TextView
            android:id="@+id/dialog_fragment_profile_top_size_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="22dp"
            android:text="@string/set_your_sizes"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/dialog_fragment_profile_top_size_hint_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dialog_fragment_rate_item_set_size_hint_updated"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_12sp"
            app:layout_constraintTop_toBottomOf="@id/dialog_fragment_profile_top_size_title_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="@string/dialog_fragment_rate_item_set_size_hint_updated"
            />

        <ScrollView
            android:id="@+id/dialog_fragment_profile_scrollview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/margin_8dp"
            android:fillViewport="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dialog_fragment_profile_top_size_hint_tv"
            app:layout_constraintBottom_toTopOf="@id/dialog_fragment_profile_top_ok_btn"
            >

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dialog_fragment_top_size_layout"
                layout="@layout/profile_top_size"
                />

        </ScrollView>

        <Button
            android:id="@+id/dialog_fragment_profile_top_ok_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"
            android:text="@string/ok"
            android:textColor="@color/colorPrimaryDark"
            android:onClick="@{() -> bindingEvents.onOkButtonClicked()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="?android:borderlessButtonStyle"
            />

        <Button
            android:id="@+id/dialog_fragment_profile_top_cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:onClick="@{() -> bindingEvents.onCancelButtonClicked()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/dialog_fragment_profile_top_ok_btn"
            style="?android:borderlessButtonStyle"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>