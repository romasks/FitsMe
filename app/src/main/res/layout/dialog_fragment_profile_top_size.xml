<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="ru.fitsme.android.presentation.fragments.profile.viewmodel.SizeProfileViewModel" />
    </data>

    <RelativeLayout
        android:id="@+id/dialog_fragment_profile_top_size_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:padding="22dp">

        <TextView
            android:id="@+id/dialog_fragment_profile_top_size_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:paddingBottom="22dp"
            android:text="@string/set_your_sizes"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_medium" />

        <TextView
            android:id="@+id/dialog_fragment_profile_top_size_hint_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_fragment_profile_top_size_title_tv"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:paddingBottom="48dp"
            android:text="@string/dialog_fragment_rate_item_set_size_hint"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_12sp"
            tools:text="@string/dialog_fragment_rate_item_set_size_hint" />

        <Spinner
            android:id="@+id/dialog_fragment_profile_top_size_type_spinner"
            style="@style/SpinnerDropdownTheme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_fragment_profile_top_size_hint_tv"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/dialog_fragment_profile_top_size_value_spinner"
            android:minWidth="140dp"
            android:selection="@{viewModel.selectedTopType}"
            android:spinnerMode="dropdown"
            tools:entries="@array/example" />

        <Spinner
            android:id="@+id/dialog_fragment_profile_top_size_value_spinner"
            style="@style/SpinnerDropdownTheme"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/dialog_fragment_profile_top_size_type_spinner"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/padding_medium"
            android:gravity="start"
            android:selection="@{viewModel.currentTopSizeIndex}"
            android:spinnerMode="dropdown"
            tools:entries="@array/example" />

        <View
            android:id="@+id/dialog_fragment_profile_top_size_type_line"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_alignStart="@id/dialog_fragment_profile_top_size_type_spinner"
            android:layout_alignEnd="@id/dialog_fragment_profile_top_size_type_spinner"
            android:layout_alignBottom="@id/dialog_fragment_profile_top_size_type_spinner"
            android:background="@color/black" />

        <View
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_alignStart="@id/dialog_fragment_profile_top_size_value_spinner"
            android:layout_alignEnd="@id/dialog_fragment_profile_top_size_value_spinner"
            android:layout_alignBottom="@id/dialog_fragment_profile_top_size_value_spinner"
            android:background="@color/black" />

        <RelativeLayout
            android:id="@+id/dialog_fragment_profile_top_chest_size_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_fragment_profile_top_size_type_line"
            android:layout_alignParentStart="true"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="@dimen/padding_small"
            android:layout_toStartOf="@id/dialog_fragment_profile_top_size_view_1"
            android:background="@drawable/rounded_layout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="-11dp"
                android:background="@color/white"
                android:padding="4dp"
                android:text="@string/top_chest_size"
                android:textSize="@dimen/text_size_8sp" />

            <TextView
                android:id="@+id/dialog_fragment_profile_top_chest_size_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_medium"
                android:gravity="start"
                android:text="@{viewModel.currentChestSize}"
                tools:text="9-96 см" />
        </RelativeLayout>

        <View
            android:id="@+id/dialog_fragment_profile_top_size_view_1"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_below="@id/dialog_fragment_profile_top_size_type_line"
            android:layout_centerHorizontal="true" />

        <RelativeLayout
            android:id="@+id/dialog_fragment_profile_top_waist_size_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_fragment_profile_top_size_type_line"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/padding_small"
            android:layout_marginTop="24dp"
            android:layout_toEndOf="@id/dialog_fragment_profile_top_size_view_1"
            android:background="@drawable/rounded_layout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="-11dp"
                android:background="@color/white"
                android:padding="4dp"
                android:text="@string/top_waist_size"
                android:textSize="@dimen/text_size_8sp" />

            <TextView
                android:id="@+id/dialog_fragment_profile_top_waist_size_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_medium"
                android:gravity="start"
                android:text="@{viewModel.currentTopWaistSize}"
                tools:text="71-74 см" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/dialog_fragment_profile_top_hips_size_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_fragment_profile_top_chest_size_layout"
            android:layout_alignParentStart="true"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="@dimen/padding_small"
            android:layout_toStartOf="@id/dialog_fragment_profile_top_size_view_1"
            android:background="@drawable/rounded_layout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="-11dp"
                android:background="@color/white"
                android:padding="4dp"
                android:text="@string/top_hips_size"
                android:textSize="@dimen/text_size_8sp" />

            <TextView
                android:id="@+id/dialog_fragment_profile_top_hips_size_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_medium"
                android:gravity="start"
                android:text="@{viewModel.currentTopHipsSize}"
                tools:text="98-101 см" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/dialog_fragment_profile_top_sleeve_size_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/dialog_fragment_profile_top_hips_size_layout"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/padding_small"
            android:layout_toEndOf="@id/dialog_fragment_profile_top_size_view_1"
            android:background="@drawable/rounded_layout"
            android:clipChildren="false">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="-11dp"
                android:background="@color/white"
                android:padding="4dp"
                android:text="@string/top_sleeve_size"
                android:textSize="@dimen/text_size_8sp" />

            <TextView
                android:id="@+id/dialog_fragment_profile_top_sleeve_size_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_medium"
                android:gravity="start"
                android:text="@{viewModel.currentSleeveSize}"
                tools:text="60-62 см" />
        </RelativeLayout>

        <Button
            android:id="@+id/dialog_fragment_profile_top_ok_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_fragment_profile_top_hips_size_layout"
            android:layout_alignParentEnd="true"
            android:background="@null"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"
            android:text="@string/ok"
            android:textColor="@color/colorPrimaryDark" />

        <Button
            android:id="@+id/dialog_fragment_profile_top_cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/dialog_fragment_profile_top_ok_btn"
            android:layout_toStartOf="@id/dialog_fragment_profile_top_ok_btn"
            android:background="@null"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:textColor="@color/black" />

    </RelativeLayout>
</layout>