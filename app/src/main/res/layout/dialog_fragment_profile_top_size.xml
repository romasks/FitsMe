<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="ru.fitsme.android.presentation.fragments.profile.viewmodel.SizeProfileViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/dialog_fragment_profile_top_size_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:padding="22dp"
        >

        <TextView
            android:id="@+id/dialog_fragment_profile_top_size_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/set_your_sizes"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/black"
            android:paddingBottom="22dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/dialog_fragment_profile_top_size_hint_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_12sp"
            android:textColor="@color/black"
            android:paddingBottom="48dp"
            app:layout_constraintTop_toBottomOf="@id/dialog_fragment_profile_top_size_title_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="@string/dialog_fragment_rate_item_set_size_hint"
            />

        <Spinner
            android:id="@+id/dialog_fragment_profile_top_size_type_spinner"
            style="@style/SpinnerDropdownTheme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minWidth="140dp"
            android:selection="@{viewModel.selectedTopType}"
            android:spinnerMode="dropdown"
            app:layout_constraintTop_toBottomOf="@id/dialog_fragment_profile_top_size_hint_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/dialog_fragment_profile_top_size_value_spinner"
            tools:entries="@array/example" />

        <Spinner
            android:id="@+id/dialog_fragment_profile_top_size_value_spinner"
            style="@style/SpinnerDropdownTheme"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_medium"
            android:gravity="start"
            android:selection="@{viewModel.currentTopSizeIndex}"
            android:spinnerMode="dropdown"
            app:layout_constraintBottom_toBottomOf="@id/dialog_fragment_profile_top_size_type_spinner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/dialog_fragment_profile_top_size_type_spinner"
            tools:entries="@array/example" />

        <View
            android:id="@+id/dialog_fragment_profile_top_size_type_line"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/black"
            app:layout_constraintTop_toBottomOf="@id/dialog_fragment_profile_top_size_type_spinner"
            app:layout_constraintEnd_toEndOf="@id/dialog_fragment_profile_top_size_type_spinner"
            app:layout_constraintStart_toStartOf="@id/dialog_fragment_profile_top_size_type_spinner"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/black"
            app:layout_constraintEnd_toEndOf="@id/dialog_fragment_profile_top_size_value_spinner"
            app:layout_constraintStart_toStartOf="@id/dialog_fragment_profile_top_size_value_spinner"
            app:layout_constraintTop_toBottomOf="@id/dialog_fragment_profile_top_size_value_spinner"
            />

        <RelativeLayout
            android:id="@+id/dialog_fragment_profile_top_chest_size_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="@dimen/padding_medium"
            android:background="@drawable/rounded_layout"
            app:layout_constraintTop_toBottomOf="@id/dialog_fragment_profile_top_size_type_line"
            app:layout_constraintEnd_toStartOf="@id/dialog_fragment_profile_top_waist_size_layout"
            app:layout_constraintStart_toStartOf="parent"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="-11dp"
                android:background="@color/white"
                android:padding="4dp"
                android:text="@string/top_chest_size"
                android:textSize="@dimen/text_size_8sp"
                />

            <TextView
                android:id="@+id/dialog_fragment_profile_top_chest_size_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_medium"
                android:gravity="start"
                android:text="@{viewModel.currentChestSize}"
                tools:text="9-96 см"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/dialog_fragment_profile_top_waist_size_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded_layout"
            app:layout_constraintTop_toBottomOf="@id/dialog_fragment_profile_top_size_type_line"
            app:layout_constraintStart_toEndOf="@id/dialog_fragment_profile_top_chest_size_layout"
            app:layout_constraintEnd_toEndOf="parent"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="-11dp"
                android:background="@color/white"
                android:padding="4dp"
                android:text="@string/top_waist_size"
                android:textSize="@dimen/text_size_8sp"
                />

            <TextView
                android:id="@+id/dialog_fragment_profile_top_waist_size_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_medium"
                android:gravity="start"
                android:text="@{viewModel.currentTopWaistSize}"
                tools:text="71-74 см"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/dialog_fragment_profile_top_hips_size_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="@dimen/padding_medium"
            android:background="@drawable/rounded_layout"
            app:layout_constraintEnd_toStartOf="@id/dialog_fragment_profile_top_sleeve_size_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dialog_fragment_profile_top_chest_size_layout"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="-11dp"
                android:background="@color/white"
                android:padding="4dp"
                android:text="@string/top_hips_size"
                android:textSize="@dimen/text_size_8sp"
                />

            <TextView
                android:id="@+id/dialog_fragment_profile_top_hips_size_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_medium"
                android:gravity="start"
                android:text="@{viewModel.currentTopHipsSize}"
                tools:text="98-101 см"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/dialog_fragment_profile_top_sleeve_size_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded_layout"
            android:clipChildren="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/dialog_fragment_profile_top_hips_size_layout"
            app:layout_constraintTop_toBottomOf="@id/dialog_fragment_profile_top_chest_size_layout"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="-11dp"
                android:background="@color/white"
                android:padding="4dp"
                android:text="@string/top_sleeve_size"
                android:textSize="@dimen/text_size_8sp"
                />

            <TextView
                android:id="@+id/dialog_fragment_profile_top_sleeve_size_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_medium"
                android:gravity="start"
                android:text="@{viewModel.currentSleeveSize}"
                tools:text="60-62 см"
                />
        </RelativeLayout>

        <Button
            android:id="@+id/dialog_fragment_profile_top_ok_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ok"
            android:textColor="@color/colorPrimaryDark"
            android:background="@null"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"
            app:layout_constraintTop_toBottomOf="@id/dialog_fragment_profile_top_hips_size_layout"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <Button
            android:id="@+id/dialog_fragment_profile_top_cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:background="@null"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"
            app:layout_constraintTop_toBottomOf="@id/dialog_fragment_profile_top_hips_size_layout"
            app:layout_constraintEnd_toStartOf="@id/dialog_fragment_profile_top_ok_btn"
            />

    </android.support.constraint.ConstraintLayout>
</layout>