<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="ru.fitsme.android.presentation.fragments.cart.view.CartViewModel" />

        <variable
            name="bindingEvents"
            type="ru.fitsme.android.presentation.fragments.cart.view.CartBindingEvents" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.hendraanggrian.widget.PaginatedRecyclerView
            android:id="@+id/cart_list_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="vertical"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.v4.widget.ContentLoadingProgressBar
            android:id="@+id/spinnerLoading"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:visibility="@{viewModel.loading ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.constraint.Group
            android:id="@+id/cart_no_item_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="@{viewModel.showEmpty ? View.VISIBLE : View.GONE}"
            app:constraint_referenced_ids="cart_no_item_tv, cart_no_item_go_to_favourite_btn, cart_no_item_go_to_rate_item_btn"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/cart_no_item_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:text="@string/no_items_in_cart"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_medium"
            app:layout_constraintBottom_toTopOf="@id/cart_no_item_go_to_favourite_btn"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <Button
            android:id="@+id/cart_no_item_go_to_favourite_btn"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_rounded_corners_primary_dark_btn"
            android:gravity="center"
            android:text="@string/cart_no_item_go_to_favourite_btn_text"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_lower_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/cart_no_item_go_to_rate_item_btn"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_rounded_corners_grey_btn"
            android:gravity="center"
            android:text="@string/cart_no_item_go_to_favourite_btn_text"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_lower_medium"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cart_no_item_go_to_favourite_btn" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="124dp"
            android:visibility="@{viewModel.showEmpty ? View.GONE : View.VISIBLE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <Button
                android:id="@+id/cart_proceed_to_checkout_btn"
                android:layout_width="270dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_rounded_corners_primary_dark_btn"
                android:gravity="center"
                android:onClick="@{() -> bindingEvents.onClickGoToCheckout()}"
                android:text="@string/cart_proceed_to_checkout_btn_text"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_lower_medium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/cart_proceed_to_checkout_total_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cart_total_tv"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_minimal_medium"
                app:layout_constraintBottom_toTopOf="@id/cart_proceed_to_checkout_btn"
                app:layout_constraintRight_toLeftOf="@id/cart_proceed_to_checkout_total_amount_tv"
                app:layout_constraintTop_toTopOf="parent"
                tools:hint="Итого: " />

            <TextView
                android:id="@+id/cart_proceed_to_checkout_total_amount_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="12dp"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_minimal_medium"
                app:layout_constraintBottom_toTopOf="@id/cart_proceed_to_checkout_btn"
                app:layout_constraintRight_toRightOf="parent"
                tools:hint="21000Р" />

            <LinearLayout
                android:id="@+id/cart_proceed_to_checkout_user_agreement_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cart_proceed_to_checkout_btn">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/cart_user_agreement_1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/cart_user_agreement_2"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/text_size_small" />
            </LinearLayout>

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>

</layout>