<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="position"
            type="Integer" />

        <variable
            name="viewModel"
            type="ru.fitsme.android.presentation.fragments.favourites.FavouritesViewModel" />

        <variable
            name="clotheItem"
            type="ru.fitsme.android.domain.entities.clothes.ClothesItem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="172dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorDivideLine"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_favourite_removed_item_deleted_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/item_favourite_deleted_item_deleted"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_lower_medium"
            app:layout_constraintBottom_toTopOf="@id/item_favourite_removed_back_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/item_favourite_removed_back_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/item_favourite_removed_undo_tv"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_size_minimal_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_favourite_removed_item_deleted_tv" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
