<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="model"
            type="ru.fitsme.android.presentation.fragments.basket.view.BasketViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.fragments.basket.BasketFragment">

        <android.support.constraint.Group
            android:id="@+id/proceed_to_checkout_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="@{model.showEmpty ? View.GONE : View.VISIBLE}"
            app:constraint_referenced_ids=""
            tools:visibility="visible"
            />

        <com.hendraanggrian.widget.PaginatedRecyclerView
            android:id="@+id/basket_list_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="vertical"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="124dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            >

            <android.support.design.internal.BaselineLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:shadowColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                android:elevation="2dp"
                >

            </android.support.design.internal.BaselineLayout>

            <Button
                android:id="@+id/basket_proceed_to_checkout_btn"
                android:layout_width="270dp"
                android:layout_height="40dp"
                android:text="@string/basket_proceed_to_checkout_btn_text"
                android:gravity="center"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:background="@drawable/bg_rounded_corners_primary_dark_btn"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

            <TextView
                android:id="@+id/basket_proceed_to_checkout_total_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/basket_total_tv"
                android:textSize="@dimen/text_size_basket_proceed_to_checkout_total"
                android:textColor="@color/black"
                app:layout_constraintRight_toLeftOf="@id/basket_proceed_to_checkout_total_amount_tv"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/basket_proceed_to_checkout_btn"
                tools:hint="Итого: "
                />

            <TextView
                android:id="@+id/basket_proceed_to_checkout_total_amount_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_basket_proceed_to_checkout_total"
                android:textColor="@color/black"
                app:layout_constraintBottom_toTopOf="@id/basket_proceed_to_checkout_btn"
                android:layout_marginBottom="12dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginEnd="16dp"
                tools:hint="21000Р"
                />

            <Button
                android:id="@+id/basket_proceed_to_checkout_agreement_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_user_agreement"
                android:textAllCaps="false"
                android:text="@{model.getAgreementText()}"
                app:layout_constraintTop_toBottomOf="@id/basket_proceed_to_checkout_btn"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="0dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:text="@string/basket_user_agreement"
                />
            <!--
            <Button
                android:id="@+id/basket_proceed_to_checkout_agreement_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_user_agreement"
                android:textColor="@color/colorPrimaryDark"
                app:layout_constraintTop_toBottomOf="@id/basket_proceed_to_checkout_agreement_1"
                android:layout_marginTop="0dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="@string/basket_user_agreement_2"
                />
            -->
        </android.support.constraint.ConstraintLayout>

        <android.support.v4.widget.ContentLoadingProgressBar
            android:id="@+id/spinnerLoading"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:indeterminate="true"
            android:layout_gravity="center"
            android:visibility="@{model.loading ? View.VISIBLE : View.GONE}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <android.support.constraint.Group
            android:id="@+id/basket_no_item_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="@{model.showEmpty ? View.VISIBLE : View.GONE}"
            app:constraint_referenced_ids="basket_no_item_tv, basket_no_item_go_to_favourite_btn, basket_no_item_go_to_rate_item_btn"
            tools:visibility="invisible"
            />

        <TextView
                android:id="@+id/basket_no_item_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_items_in_basket"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/black"
                app:layout_constraintBottom_toTopOf="@id/basket_no_item_go_to_favourite_btn"
                android:layout_marginBottom="40dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

        <Button
                android:id="@+id/basket_no_item_go_to_favourite_btn"
                android:layout_width="270dp"
                android:layout_height="40dp"
                android:text="@string/basket_no_item_go_to_favourite_btn_text"
                android:gravity="center"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:background="@drawable/bg_rounded_corners_primary_dark_btn"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

        <Button
                android:id="@+id/basket_no_item_go_to_rate_item_btn"
                android:layout_width="270dp"
                android:layout_height="40dp"
                android:text="@string/basket_no_item_go_to_favourite_btn_text"
                android:gravity="center"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/black"
                android:textAllCaps="false"
                android:background="@drawable/bg_rounded_corners_grey_btn"
                app:layout_constraintTop_toBottomOf="@id/basket_no_item_go_to_favourite_btn"
                android:layout_marginTop="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />





    </android.support.constraint.ConstraintLayout>

</layout>