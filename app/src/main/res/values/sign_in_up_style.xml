<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SignInUp">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="SignInUp.Button" parent="SignInUp">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_width">270dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SignInUp.Button.Red">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="SignInUp.Button.Black">
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="SignInUp.EditText" parent="SignInUp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SignInUp.EditText.Login">
        <item name="android:inputType">textPersonName</item>
    </style>

    <style name="SignInUp.EditText.Password">
        <item name="android:inputType">textPassword</item>
    </style>
</resources>