<resources>

    <style name="Logo">
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/courgette_regular</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="colorPrimaryDark">@color/colorBackground</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="SpinnerDropdownTheme" parent="android:Widget.Spinner.DropDown">
        <item name="android:background">@drawable/bg_spinner</item>
        <item name="android:paddingTop">@dimen/padding_8dp</item>
        <item name="android:paddingBottom">@dimen/padding_8dp</item>
        <item name="android:textColor">@color/thinBlackText</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <item name="android:dropDownSelector">@color/colorGreyButton</item>
        <item name="android:popupBackground">@color/white</item>
    </style>

    <style name="ReturnsItemTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="BottomButtonStyle">
        <item name="android:background">@drawable/bg_send_feedback_btn</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="FlatButtonStyle" parent="AppTheme">
        <item name="buttonStyle">@style/Widget.AppCompat.Button.Borderless</item>
    </style>

    <style name="CheckoutFieldStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/delivery_address_field_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:lines">1</item>
        <item name="android:textSize">@dimen/delivery_address_edit_field_text</item>
    </style>

    <style name="CheckoutTextFieldStyle" parent="CheckoutFieldStyle">
        <item name="android:inputType">text</item>
        <item name="android:maxLength">12</item>
    </style>

    <style name="CheckoutNumberFieldStyle" parent="CheckoutFieldStyle">
        <item name="android:inputType">number</item>
        <item name="android:maxLength">3</item>
    </style>

</resources>
